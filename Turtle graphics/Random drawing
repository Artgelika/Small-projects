# import graphical capabilities
from turtle import *
import numpy as crazy_thing

# Make a window SHAPE by SHAPE pixels
SHAPE = 500

# make a turtle to bulid the graphics
t1 = Turtle()
# hide the turtle
t1.hideturtle()
# set turtle speed to 0
t1.speed(0)

# making art pattern
for i in range(SHAPE):
    t1.forward(crazy_thing.random.randint(SHAPE//2))
    t1.right(90)
